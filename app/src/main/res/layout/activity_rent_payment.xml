<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_bid"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:background="@drawable/default_property"
            android:layout_height="@dimen/_250sdp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:cardElevation="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:id="@+id/level_pro_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/property_name"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/click_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/view_details"
                    android:visibility="gone"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:id="@+id/level_rentamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/level_pro_name"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/rent_amount" />

                <TextView
                    android:id="@+id/txtinitailamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/level_pro_name"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="$0"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:id="@+id/level_processingfees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/level_rentamount"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="@string/processing_fee" />

                <TextView
                    android:id="@+id/level_nonrefund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/level_rentamount"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_toRightOf="@+id/level_processingfees"
                    android:text="@string/non_refundable"
                    android:textColor="@color/grey_400" />


                <TextView
                    android:id="@+id/txtprocessingfees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/level_rentamount"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="$5"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:id="@+id/level_totalamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/level_processingfees"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="@string/total_payable_amount" />


                <TextView
                    android:id="@+id/txttotalamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/level_processingfees"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="$0"
                    android:textSize="@dimen/_12sdp" />

                <Button
                    android:id="@+id/pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/level_totalamount"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_20sdp"
                    android:background="@drawable/round_btn_solid"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:text="@string/pay_now"
                    android:textColor="@color/white" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:text="@string/note_intial_amount"
            android:textColor="@color/gmail" />



    </LinearLayout>

</ScrollView>
