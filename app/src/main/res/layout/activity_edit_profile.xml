<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:isScrollContainer="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_turn_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/edit_info"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <com.open_source.util.CircleImageView
                    android:id="@+id/profile_img"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/title_turn_on"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/you" />

                <ImageView
                    android:id="@+id/camera"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/profile_img"
                    android:layout_marginRight="105dp"
                    app:srcCompat="@drawable/img_edit" />

                <TextView
                    android:id="@+id/upload_your_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_img"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/upload_your_image"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/user_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_img"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <LinearLayout
                    android:id="@+id/lay_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_type"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/ctv_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/first_name"
                            android:textColor="@color/colorPrimary" />

                        <EditText
                            android:id="@+id/cet_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ctv_first_name"
                            android:hint="@string/first_name_small"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:textSize="14dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/ctv_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/last_name"
                            android:textColor="@color/colorPrimary" />

                        <EditText
                            android:id="@+id/cet_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ctv_last_name"
                            android:hint="@string/last_name_small"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/ctv_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lay_first_name"
                    android:layout_marginTop="10dp"
                    android:gravity="center|start"
                    android:text="@string/username"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary" />

                <EditText
                    android:id="@+id/cet_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ctv_username"
                    android:hint="@string/username"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/ctv_business"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cet_username"
                    android:layout_marginTop="10dp"
                    android:gravity="center|start"
                    android:text="@string/business_nmae"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary" />

                <EditText
                    android:id="@+id/cet_business"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ctv_business"
                    android:hint="@string/business_nmae"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/ctv_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cet_business"
                    android:layout_marginTop="10dp"
                    android:gravity="center|start"
                    android:text="@string/gender"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary" />

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ctv_gender"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:imeOptions="actionNext"
                        android:text="@string/male"
                        android:textColor="@drawable/radio_selection"
                        android:textSize="@dimen/_12sdp"
                        android:theme="@style/RadioButton_Background" />

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_50sdp"
                        android:checked="false"
                        android:imeOptions="actionNext"
                        android:text="@string/female"
                        android:textColor="@drawable/radio_selection"
                        android:textSize="@dimen/_12sdp"
                        android:theme="@style/RadioButton_Background" />
                </RadioGroup>

                <TextView
                    android:id="@+id/ctv_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radio_group"
                    android:layout_marginTop="10dp"
                    android:gravity="center|start"
                    android:text="@string/website"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary" />

                <EditText
                    android:id="@+id/cet_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ctv_website"
                    android:hint="@string/website"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/ctv_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cet_website"
                    android:layout_marginTop="10dp"
                    android:gravity="center|start"
                    android:text="@string/bio"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary" />

                <EditText
                    android:id="@+id/cet_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ctv_bio"
                    android:hint="@string/bio"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="300"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/ctv_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cet_bio"
                    android:layout_marginTop="10dp"
                    android:gravity="center|start"
                    android:text="@string/page"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary" />

                <EditText
                    android:id="@+id/cet_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ctv_page"
                    android:hint="@string/page"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="300"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/ctv_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cet_page"
                    android:layout_marginTop="10dp"
                    android:gravity="center|start"
                    android:text="@string/category"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary" />

                <EditText
                    android:id="@+id/cet_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ctv_category"
                    android:hint="@string/category"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/ctv_private_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cet_category"
                    android:layout_marginTop="10dp"
                    android:gravity="center|start"
                    android:text="@string/private_information"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/ctv_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ctv_private_info"
                    android:layout_marginTop="10dp"
                    android:gravity="center|start"
                    android:text="@string/profile_type"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary" />

                <RadioGroup
                    android:id="@+id/radio_group_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ctv_privacy"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_public"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:imeOptions="actionNext"
                        android:text="@string/txtpublic"
                        android:textColor="@drawable/radio_selection"
                        android:textSize="@dimen/_12sdp"
                        android:theme="@style/RadioButton_Background" />

                    <RadioButton
                        android:id="@+id/radio_private"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_50sdp"
                        android:checked="false"
                        android:imeOptions="actionNext"
                        android:text="@string/txt_private"
                        android:textColor="@drawable/radio_selection"
                        android:textSize="@dimen/_12sdp"
                        android:theme="@style/RadioButton_Background" />
                </RadioGroup>

                <LinearLayout
                    android:id="@+id/lay_available"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radio_group_privacy"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/you_r_availability"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimaryDark" />

                    <CheckBox
                        android:id="@+id/check_8to5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_08_00_am_to_5_00_pm" />

                    <CheckBox
                        android:id="@+id/check_5_to12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_5_00_pm_12_00_am" />


                    <CheckBox
                        android:id="@+id/all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24hrs" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lay_available"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/select_security_question"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimaryDark" />

                    <Spinner
                        android:id="@+id/spn_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.9dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/grey" />


                    <EditText
                        android:id="@+id/answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/border_gray"
                        android:hint="@string/answer"
                        android:gravity="start|top"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:ems="0"
                        android:padding="@dimen/_5sdp"
                        android:maxLength="200"
                        android:textSize="14dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/ctv_your_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lay_question"
                    android:layout_marginTop="15dp"
                    android:gravity="center|start"
                    android:text="@string/enter_your_email"
                    android:textColor="@color/colorPrimary" />

                <RelativeLayout
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ctv_your_email">

                    <EditText
                        android:id="@+id/cet_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/resent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:visibility="gone"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="@string/resend" />


                </RelativeLayout>


                <TextView
                    android:id="@+id/email_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/email"
                    android:text="" />

                <TextView
                    android:id="@+id/ctv_your_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email_status"
                    android:layout_marginTop="10dp"
                    android:gravity="center|start"
                    android:text="@string/enter_your_contact_no"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary" />

                <EditText
                    android:id="@+id/cet_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ctv_your_contact"
                    android:hint="@string/contact_number"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:maxLength="12"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/ctv_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cet_contact"
                    android:layout_marginTop="10dp"
                    android:text="@string/change_pass"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary" />

                <RelativeLayout
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/ctv_password"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/btn"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ic"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:padding="3dp"
                        app:srcCompat="@drawable/right" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/ic"
                        android:gravity="center_vertical"
                        android:text="@string/submit"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>