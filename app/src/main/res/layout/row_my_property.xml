<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_8sdp"
    android:layout_margin="@dimen/_5sdp"
    android:id="@+id/relview">

    <ImageView
        android:id="@+id/pro_img"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:background="@drawable/default_property"/>


    <RelativeLayout
        android:id="@+id/img_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:elevation="@dimen/_15sdp"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:srcCompat="@drawable/purpose_for_rent" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/img_sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:elevation="@dimen/_15sdp"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:srcCompat="@drawable/purpose_for_sell" />

    </RelativeLayout>

    <!--<ImageView
        android:id="@+id/img_rent"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="end"
        android:visibility="gone"
        android:layout_margin="@dimen/_3sdp"
        android:src="@drawable/purpose_for_rent" />

    <ImageView
        android:id="@+id/img_sell"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="end"
        android:layout_margin="@dimen/_3sdp"
        android:visibility="gone"
        android:src="@drawable/purpose_for_sell" />-->

    <LinearLayout
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ctv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_3sdp"
            android:singleLine="true"
            android:text="Home"/>

        <TextView
            android:id="@+id/ctv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:singleLine="true"
            android:layout_marginStart="@dimen/_3sdp"
            android:text="Indore,bhawarkua"/>

    </LinearLayout>

</FrameLayout>
