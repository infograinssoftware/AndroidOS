<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close1"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:padding="2dp"
        app:srcCompat="@drawable/cross_gold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/close"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/title_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="User Type"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_policy"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_buy_sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:checked="false"
                android:imeOptions="actionNext"
                android:text="@string/buyer_seller"
                android:textSize="@dimen/_11sdp"
                android:textColor="@drawable/radio_selection"
                android:theme="@style/RadioButton_Background" />

            <RadioButton
                android:id="@+id/rb_renter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:checked="false"
                android:imeOptions="actionNext"
                android:text="@string/renter"
                android:textSize="@dimen/_11sdp"
                android:textColor="@drawable/radio_selection"
                android:theme="@style/RadioButton_Background" />

            <RadioButton
                android:id="@+id/rb_investor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:checked="false"
                android:imeOptions="actionNext"
                android:text="@string/investor"
                android:textSize="@dimen/_11sdp"
                android:textColor="@drawable/radio_selection"
                android:theme="@style/RadioButton_Background" />

            <RadioButton
                android:id="@+id/rb_agent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:checked="false"
                android:imeOptions="actionNext"
                android:text="@string/agent"
                android:textSize="@dimen/_11sdp"
                android:textColor="@drawable/radio_selection"
                android:theme="@style/RadioButton_Background" />

            <RadioButton
                android:id="@+id/rb_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:checked="false"
                android:imeOptions="actionNext"
                android:text="@string/servide_provider"
                android:textSize="@dimen/_11sdp"
                android:textColor="@drawable/radio_selection"
                android:theme="@style/RadioButton_Background" />
        </RadioGroup>

        <RelativeLayout
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/radio_group"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn"
            android:gravity="center"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <ImageView
                android:id="@+id/ic"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:padding="3dp"
                app:srcCompat="@drawable/right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/submit"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/ic"
                android:textColor="@color/white"
                android:textSize="20dp"/>

            <!--<Button-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_gravity="center"-->
                <!--android:background="@null"-->
                <!--android:drawableLeft="@drawable/right"-->
                <!--android:minHeight="0dp"-->
                <!--android:minWidth="0dp"-->
                <!--android:text="@string/submit"-->
                <!--android:textAllCaps="false"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="14dp" />-->
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>