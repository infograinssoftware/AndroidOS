        <RelativeLayout
            android:id="@+id/btn_dealer"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/btn_email"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:background="@drawable/round_btn_transparent_square"
            android:gravity="center">

            <ImageView
                android:id="@+id/ic1"
                android:layout_width="30dp"
                android:layout_marginRight="5dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/you_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/continue_with_dealer"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/ic1"
                android:textColor="@color/white"
                android:textSize="14dp"/>

            <!--<Button-->
