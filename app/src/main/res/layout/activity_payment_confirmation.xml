<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_bid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:background="@drawable/won_bg"
            android:visibility="gone" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:cardElevation="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:id="@+id/level_pro_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/property_name"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/click_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/view_details"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/level_initailamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/level_pro_name"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/property_acthual_price" />

                <TextView
                    android:id="@+id/txtinitailamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/level_pro_name"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="$0"
                    android:textSize="@dimen/_12sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/level_initailamount"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/grey" />

                <TextView
                    android:id="@+id/level_processingfees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/level_initailamount"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="@string/processing_fee" />

                <TextView
                    android:id="@+id/level_nonrefund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/level_initailamount"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_toRightOf="@+id/level_processingfees"
                    android:text="@string/non_refundable"
                    android:textColor="@color/grey_400" />

                <TextView
                    android:id="@+id/txtprocrssfee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/level_initailamount"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="$0"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:id="@+id/level_titlefees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/level_processingfees"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:visibility="gone"
                    android:text="@string/title_fee" />

                <TextView
                    android:id="@+id/level_title_nonrefund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/level_processingfees"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_toRightOf="@+id/level_titlefees"
                    android:text="@string/non_refundable"
                    android:visibility="gone"
                    android:textColor="@color/grey_400" />


                <TextView
                    android:id="@+id/txttitlefee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/txtprocrssfee"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="$0"
                    android:visibility="gone"
                    android:textSize="@dimen/_12sdp" />


                <!--         <TextView
                             android:id="@+id/level_initailamount"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_below="@+id/level_titlefees"
                             android:layout_marginTop="@dimen/_25sdp"
                             android:text="@string/property_acthual_price" />


                         <TextView
                             android:id="@+id/txtinitailamount"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_alignParentRight="true"
                             android:layout_below="@+id/level_titlefees"
                             android:layout_marginTop="@dimen/_25sdp"
                             android:text="$0"
                             android:textSize="@dimen/_12sdp" />-->


                <TextView
                    android:id="@+id/level_totalamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/level_titlefees"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="@string/payable_initail_amount" />


                <TextView
                    android:id="@+id/txttotalamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/level_titlefees"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="$0"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:id="@+id/level_remainingamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/level_totalamount"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="@string/remaining_amount" />


                <TextView
                    android:id="@+id/txt_remaining_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/level_totalamount"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="$0"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:id="@+id/txtpay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_remaining_amount"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="@string/select_closing_date"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/laydate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtpay"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/oval_btn"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_calender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:background="@drawable/calendar"
                        android:paddingBottom="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp" />

                    <View
                        android:layout_width="0.2dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:background="@color/grey" />

                    <TextView
                        android:id="@+id/txt_cal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/level_date"
                        android:paddingBottom="@dimen/_7sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>


                <Button
                    android:id="@+id/pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/laydate"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_20sdp"
                    android:background="@drawable/round_btn_solid"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:text="@string/pay_initial_amount"
                    android:textColor="@color/white" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:text="@string/payment_note"
            android:textColor="@color/gmail" />

    </LinearLayout>
</ScrollView>